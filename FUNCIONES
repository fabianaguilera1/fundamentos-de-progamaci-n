 float calculoarea (float r);

 void main()
 { float r;
	 cout<<"ingrese el radio:"; cin>>r;
	 cout<<"el area de la circunferencia es:"<<calculoarea(r)<<endl;
	 getch();
  
 }
float calculoarea (float r)
{ 
	return 3.1416*r*r;
}
