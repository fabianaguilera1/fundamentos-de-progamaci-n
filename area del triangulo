#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main ()
{
	float altura,base,area=0;
	cout<<"calcular el area del triangulo"<<endl;
	cout<<"digite base"; cin>>base;
	cout<<"digite altura"; cin>>altura;

	
	area = (base*altura)/2;

	cout<<"el area del triangulo es:"<<area<<endl;


	getch();
}
